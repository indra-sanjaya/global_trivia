<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Categories | Global Trivia</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
    }

    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #6a89cc, #b8e994);
      display: flex;
      justify-content: center;
      padding: 40px 20px;
    }

    .container {
      width: 900px;
      max-width: 95%;
      position: relative;
      z-index: 1;
    }

    body::before,
    body::after {
      content: '';
      position: absolute;
      width: 200px;
      height: 200px;
      border-radius: 50%;
      background: radial-gradient(circle, #ff6b6b, #feca57);
      opacity: 0.2;
      z-index: 0;
    }

    body::before {
      top: -50px;
      left: -50px;
      animation: float 12s linear infinite;
    }

    body::after {
      bottom: -60px;
      right: -60px;
      animation: float 15s linear infinite reverse;
    }

    @keyframes float {
      0% { transform: rotate(0deg) translateY(0); }
      50% { transform: rotate(180deg) translateY(10px); }
      100% { transform: rotate(360deg) translateY(0); }
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      color: #fff;
      text-shadow: 1px 1px 5px rgba(0,0,0,0.3);
    }

    .message {
      padding: 15px 20px;
      border-radius: 12px;
      margin-bottom: 20px;
      font-weight: bold;
      text-align: center;
      box-shadow: 0 6px 15px rgba(0,0,0,0.15);
      animation: fadeIn 0.5s ease forwards;
      position: relative;
      z-index: 1;
    }

    .message.error {
      background: linear-gradient(45deg, #ff6b6b, #ff3f3f);
      color: white;
    }

    .message.success {
      background: linear-gradient(45deg, #38ada9, #4a69bd);
      color: white;
    }

    @keyframes fadeIn {
      0% { opacity: 0; transform: translateY(-10px); }
      100% { opacity: 1; transform: translateY(0); }
    }

    .search-bar {
      display: flex;
      gap: 10px;
      margin-bottom: 30px;
    }

    .search-bar input {
      flex: 1;
      padding: 12px 15px;
      border-radius: 10px;
      border: 1px solid #ccc;
      font-size: 14px;
      outline: none;
      transition: all 0.3s;
    }

    .search-bar input:focus {
      border-color: #4a69bd;
      box-shadow: 0 0 8px rgba(74,105,189,0.5);
    }

    .search-bar button {
      padding: 12px 20px;
      border-radius: 10px;
      border: none;
      background: linear-gradient(45deg, #38ada9, #4a69bd);
      color: white;
      font-weight: bold;
      cursor: pointer;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .search-bar button:hover {
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 20px;
    }

    .card {
      background: #fff;
      padding: 25px;
      border-radius: 15px;
      text-align: center;
      box-shadow: 0 10px 25px rgba(0,0,0,0.15);
      transition: transform 0.3s, box-shadow 0.3s;
      position: relative;
      z-index: 1;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .card a {
      text-decoration: none;
      font-size: 20px;
      font-weight: bold;
      color: #4a69bd;
      transition: color 0.3s;
    }

    .card a:hover {
      color: #38ada9;
    }

    .card p {
      margin-top: 10px;
      font-size: 14px;
      color: #555;
    }

    .card div a {
      margin: 5px 5px 0 5px;
      font-size: 14px;
      color: #ff6b6b;
      text-decoration: none;
      transition: color 0.3s;
    }

    .card div a:hover {
      color: #ff3f3f;
    }

    .card img {
      width: 100%;
      height: 150px;          
      object-fit: cover;      
      border-radius: 12px;
      margin-bottom: 15px;
      background-color: #f1f2f6;
    }
    
    .card {
      display: flex;
      flex-direction: column;
    }

    .card a {
      margin-top: auto;
    }

    .actions {
      text-align: center;
      margin-top: 40px;
    }

    .actions a {
      margin: 0 10px;
      text-decoration: none;
      color: #fff;
      font-weight: bold;
      padding: 10px 20px;
      border-radius: 10px;
      background: linear-gradient(45deg, #4a69bd, #38ada9);
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .actions a:hover {
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    .admin {
      display: inline-block;
      margin-top: 15px;
      padding: 10px 20px;
      background: linear-gradient(45deg, #ff6b6b, #ff3f3f);
      color: white !important;
      border-radius: 10px;
      text-decoration: none;
      font-weight: bold;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .admin:hover {
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(255,0,0,0.3);
    }

    /* Responsive */
    @media (max-width: 500px) {
      .grid {
        grid-template-columns: 1fr;
      }
      .search-bar {
        flex-direction: column;
      }
      .search-bar button {
        width: 100%;
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <h2>Choose Category</h2>

    <% if (error && error.length) { %>
      <div class="message error">
        <% error.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (success && success.length) { %>
      <div class="message success">
        <% success.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <form method="get" class="search-bar">
      <input type="search" name="name" placeholder="Search by category">
      <button type="submit">Search</button>
    </form>

    <div class="grid">
      <% categories.forEach(cat => { %>
        <div class="card">
          <img src="<%= cat.imageUrl %>" alt="">
          <a href="/questions/<%= cat.id %>"><%= cat.name %></a>
          <p><%= cat.description %></p>

          <% if (locals.role === "admin") { %>
            <div>
              <a href="/admin/categories/<%= cat.id %>/edit">‚úèÔ∏è Edit</a>
              <a href="/admin/categories/<%= cat.id %>/delete" onclick="return confirm('Delete this category?')">üóë Delete</a>
            </div>
          <% } %>
        </div>
      <% }) %>
    </div>

    <div class="actions">
      <a href="/">‚Üê Back Home</a>

      <% if (locals.role === "admin") { %>
        <a href="/admin/categories/add" class="admin">+ Add Category</a>
        <a href="/admin/questions/add" class="admin">+ Add Question</a>
      <% } %>
    </div>
  </div>

</body>
</html>
