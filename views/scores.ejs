<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Leaderboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f6fa;
    }

    .container {
      width: 800px;
      margin: 60px auto;
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    h2 {
      text-align: center;
      margin-bottom: 25px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 12px;
      text-align: center;
    }

    th {
      background-color: #4a69bd;
      color: white;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    .actions {
      text-align: center;
      margin-top: 20px;
    }

    .actions a {
      text-decoration: none;
      color: #4a69bd;
      font-weight: bold;
    }

    .rank {
      font-weight: bold;
    }
  </style>
</head>
<body>

  <div class="container">
    <h2>üèÜ Leaderboard</h2>

    <% if (scores.length === 0) { %>
      <p style="text-align:center;">No scores yet.</p>
    <% } else { %>
      <table>
        <tr>
          <th>#</th>
          <th>User</th>
          <th>Category</th>
          <th>Score</th>
        </tr>

        <% scores.forEach((s, index) => { %>
          <tr>
            <td class="rank"><%= index + 1 %></td>
            <td><%= s.User.username %></td>
            <td><%= s.Category.name %></td>
            <td>
              <%= s.formatted %> <%= s.max %>
            </td>
          </tr>
        <% }) %>
      </table>
    <% } %>

    <div class="actions">
      <a href="/">‚Üê Back Home</a>
    </div>
  </div>

</body>
</html>
