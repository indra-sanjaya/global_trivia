<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Quiz</title>
  <style>
    /* Reset some defaults */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f6fa, #dcdde1);
      color: #333;
    }

    .container {
      max-width: 800px;
      margin: 50px auto;
      padding: 0 20px;
    }

    h2 {
      text-align: center;
      margin-bottom: 40px;
      font-size: 32px;
      color: #2f3640;
    }

    /* Success / error messages */
    .message {
      text-align: center;
      padding: 10px 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      font-weight: bold;
    }
    .message.error {
      background-color: #ff7979;
      color: white;
    }
    .message.success {
      background-color: #44bd32;
      color: white;
    }

    .question-card {
      background: #fff;
      padding: 25px 30px;
      margin-bottom: 25px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }

    .question-card:hover {
      transform: translateY(-3px);
    }

    .question-card p {
      font-size: 20px;
      margin-bottom: 15px;
      color: #2f3640;
    }

    label {
      display: block;
      margin-bottom: 10px;
      font-size: 16px;
      cursor: pointer;
      padding: 5px 10px;
      border-radius: 5px;
      transition: background 0.2s;
    }

    label:hover {
      background-color: #f1f2f6;
    }

    input[type="radio"] {
      margin-right: 10px;
    }

    .submit-btn {
      display: block;
      width: 100%;
      padding: 14px 0;
      margin-top: 10px;
      font-size: 18px;
      background-color: #4a69bd;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s, transform 0.2s;
    }

    .submit-btn:hover {
      background-color: #3b55a0;
      transform: scale(1.03);
    }

    /* Admin section */
    .admin-section {
      margin-top: 50px;
      padding: 20px;
      background: #f5f6fa;
      border-radius: 10px;
    }

    .message {
      text-align: center;
      padding: 15px 20px;
      margin-bottom: 25px;
      border-radius: 12px;
      font-weight: bold;
      box-shadow: 0 6px 15px rgba(0,0,0,0.15);
      animation: floatIn 0.5s ease forwards;
      position: relative;
      z-index: 2;
      font-size: 16px;
    }

    /* Error gradient */
    .message.error {
      background: linear-gradient(45deg, #ff6b6b, #ff3f3f);
      color: white;
    }

    /* Success gradient */
    .message.success {
      background: linear-gradient(45deg, #38ada9, #4a69bd);
      color: white;
    }

    /* Floating animation */
    @keyframes floatIn {
      0% { opacity: 0; transform: translateY(-15px); }
      100% { opacity: 1; transform: translateY(0); }
    }

    .admin-section h3 {
      margin-bottom: 20px;
      color: #2f3640;
      text-align: center;
    }

    .admin-section div {
      margin-bottom: 12px;
      font-size: 16px;
    }

    .admin-section a {
      text-decoration: none;
      margin-right: 10px;
      color: #e1b12c;
      font-weight: bold;
    }

    .admin-section a:hover {
      text-decoration: underline;
      color: #d4ac0d;
    }

    /* Back link */
    .back {
      text-align: center;
      margin-top: 40px;
      font-size: 16px;
    }

    .back a {
      text-decoration: none;
      color: #4a69bd;
      font-weight: bold;
      transition: color 0.2s;
    }

    .back a:hover {
      color: #3b55a0;
    }
  </style>
</head>
<body>

<div class="container">
  <h2>Quiz Time üß†</h2>

  <% if (error && error.length) { %>
    <div class="message error">
      <% error.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <% if (success && success.length) { %>
    <div class="message success">
      <% success.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <form action="/questions/<%= categoryId %>" method="POST">
    <input type="hidden" name="categoryId" value="<%= categoryId %>">

    <% questions.forEach((q, index) => { %>
      <div class="question-card">
        <p><b><%= index + 1 %>. <%= q.text %></b></p>
        <% q.choices.forEach(choice => { %>
          <label>
            <input type="radio" name="answers[q_<%= q.id %>]" value="<%= choice %>" required>
            <%= choice %>
          </label>
        <% }) %>
      </div>
    <% }) %>

    <button type="submit" class="submit-btn">Finish Quiz</button>
  </form>

  <% if (locals.role === "admin") { %>
    <div class="admin-section">
      <h3>Admin Actions</h3>
      <% questions.forEach(q => { %>
        <div>
          <b><%= q.text %></b><br>
          <a href="/admin/questions/<%= q.id %>/edit">‚úèÔ∏è Edit</a>
          <a href="/admin/questions/<%= q.id %>/delete" onclick="return confirm('Delete this question?')">üóë Delete</a>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="back">
    <a href="/categories">‚Üê Back</a>
  </div>
</div>

</body>
</html>
