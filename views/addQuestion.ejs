<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Question | Global Trivia</title>
  <style>
    /* Base reset */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
    }

    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(135deg, #6a89cc, #b8e994);
      padding: 20px;
    }

    .container {
      position: relative;
      width: 500px;
      background: #fff;
      padding: 40px 30px;
      border-radius: 15px;
      box-shadow: 0 15px 30px rgba(0,0,0,0.2);
      overflow: hidden;
    }

    /* Floating gradient circle behind card */
    .container::before {
      content: '';
      position: absolute;
      width: 140px;
      height: 140px;
      background: radial-gradient(circle, #ff6b6b, #feca57);
      border-radius: 50%;
      top: -50px;
      right: -50px;
      opacity: 0.3;
      z-index: 0;
      animation: float 12s linear infinite;
    }

    @keyframes float {
      0% { transform: rotate(0deg) translateY(0); }
      50% { transform: rotate(180deg) translateY(10px); }
      100% { transform: rotate(360deg) translateY(0); }
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      position: relative;
      z-index: 1;
      color: #2f3640;
    }

    label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
      position: relative;
      z-index: 1;
    }

    input, select {
      width: 100%;
      padding: 12px 15px;
      margin-bottom: 15px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 16px;
      transition: all 0.3s;
      position: relative;
      z-index: 1;
    }

    input:focus, select:focus {
      border-color: #4a69bd;
      box-shadow: 0 0 8px rgba(74,105,189,0.5);
      outline: none;
    }

    button {
      width: 100%;
      padding: 14px 0;
      border: none;
      border-radius: 10px;
      background: linear-gradient(45deg, #4a69bd, #38ada9);
      color: white;
      font-size: 18px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
      position: relative;
      z-index: 1;
      margin-bottom: 10px;
    }

    button:hover {
      transform: scale(1.03);
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }

    .back {
      display: block;
      text-align: center;
      margin-top: 15px;
      font-weight: bold;
      color: #4a69bd;
      text-decoration: none;
      position: relative;
      z-index: 1;
    }

    .back:hover {
      text-decoration: underline;
    }

    .message {
      padding: 10px;
      border-radius: 8px;
      text-align: center;
      font-weight: bold;
      margin-bottom: 15px;
      position: relative;
      z-index: 1;
    }

    .message.error {
      background: #fee2e2;
      color: #dc2626;
    }

    .message.success {
      background: #dcfce7;
      color: #166534;
    }

    @media (max-width: 520px) {
      .container {
        width: 95%;
        padding: 30px 20px;
      }
      input, select, button {
        font-size: 16px;
        padding: 12px;
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <h2>Add Question</h2>

    <% if (error && error.length) { %>
      <% error.forEach(msg => { %>
        <div class="message error"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (success && success.length) { %>
      <% success.forEach(msg => { %>
        <div class="message success"><%= msg %></div>
      <% }) %>
    <% } %>

    <form action="/admin/questions/add" method="POST">
      <label>Question</label>
      <input type="text" name="text" placeholder="Enter question" required>

      <label>Choices</label>
      <input type="text" name="choices[]" placeholder="Choice 1" required>
      <input type="text" name="choices[]" placeholder="Choice 2" required>
      <input type="text" name="choices[]" placeholder="Choice 3" required>
      <input type="text" name="choices[]" placeholder="Choice 4" required>

      <label>Correct Answer</label>
      <input type="text" name="answer" placeholder="Enter correct answer" required>

      <label>Category</label>
      <select name="CategoryId" required>
        <option value="">-- Select Category --</option>
        <% categories.forEach(c => { %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% }) %>
      </select>

      <button type="submit">Save Question</button>
    </form>

    <a href="/categories" class="back">‚Üê Back to Categories</a>
  </div>

</body>
</html>
