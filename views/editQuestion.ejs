<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Question</title>
  <style>
    /* Base & reset */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
    }

    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #6a89cc, #b8e994);
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .container {
      position: relative;
      background: #fff;
      padding: 40px 30px;
      border-radius: 15px;
      width: 500px;
      box-shadow: 0 15px 30px rgba(0,0,0,0.2);
      overflow: hidden;
    }

    /* Floating gradient circle behind */
    .container::before {
      content: '';
      position: absolute;
      width: 150px;
      height: 150px;
      background: radial-gradient(circle, #ff6b6b, #feca57);
      border-radius: 50%;
      top: -60px;
      right: -60px;
      opacity: 0.3;
      z-index: 0;
      animation: float 12s linear infinite;
    }

    @keyframes float {
      0% { transform: rotate(0deg) translateY(0); }
      50% { transform: rotate(180deg) translateY(10px); }
      100% { transform: rotate(360deg) translateY(0); }
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      position: relative;
      z-index: 1;
      color: #2f3640;
    }

    input, select, textarea {
      width: 100%;
      padding: 12px 15px;
      margin-bottom: 15px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 16px;
      transition: all 0.3s;
      position: relative;
      z-index: 1;
    }

    input:focus, select:focus, textarea:focus {
      border-color: #4a69bd;
      box-shadow: 0 0 8px rgba(74,105,189,0.5);
      outline: none;
    }

    button {
      width: 100%;
      padding: 14px 0;
      border: none;
      border-radius: 10px;
      background: linear-gradient(45deg, #4a69bd, #38ada9);
      color: white;
      font-size: 18px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
      position: relative;
      z-index: 1;
      margin-bottom: 10px;
    }

    button:hover {
      transform: scale(1.03);
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }

    .delete-btn {
      background: linear-gradient(45deg, #ff3f3f, #ff6b6b);
    }

    .delete-btn:hover {
      transform: scale(1.03);
      box-shadow: 0 8px 20px rgba(255,0,0,0.3);
    }

    .back {
      display: block;
      text-align: center;
      margin-top: 15px;
      font-weight: bold;
      color: #4a69bd;
      text-decoration: none;
      position: relative;
      z-index: 1;
    }

    .back:hover {
      text-decoration: underline;
    }

    .message {
      padding: 10px;
      border-radius: 8px;
      text-align: center;
      font-weight: bold;
      margin-bottom: 15px;
      position: relative;
      z-index: 1;
    }

    .message.error {
      background: #fee2e2;
      color: #dc2626;
    }

    .message.success {
      background: #dcfce7;
      color: #166534;
    }

    /* Responsive */
    @media (max-width: 520px) {
      .container {
        width: 95%;
        padding: 30px 20px;
      }
      input, select, textarea, button {
        font-size: 16px;
        padding: 12px;
      }
    }

  </style>
</head>
<body>
  <div class="container">
    <h2>Edit Question</h2>

    <% if (error && error.length) { %>
      <% error.forEach(msg => { %>
        <div class="message error"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (success && success.length) { %>
      <% success.forEach(msg => { %>
        <div class="message success"><%= msg %></div>
      <% }) %>
    <% } %>

    <form action="/admin/questions/<%= question.id %>/edit" method="POST">
      <label>Question</label>
      <input type="text" name="text" value="<%= question.text %>" required>

      <label>Choices</label>
      <% question.choices.forEach((c, i) => { %>
        <input type="text" name="choices[]" value="<%= c %>" placeholder="Choice <%= i + 1 %>" required>
      <% }) %>

      <label>Correct Answer</label>
      <input type="text" name="answer" value="<%= question.answer %>" required>

      <label>Category</label>
      <select name="CategoryId" required>
        <% categories.forEach(c => { %>
          <option value="<%= c.id %>" <%= c.id === question.CategoryId ? "selected" : "" %>><%= c.name %></option>
        <% }) %>
      </select>

      <button type="submit">Update Question</button>
    </form>

    <form action="/admin/questions/<%= question.id %>/delete" method="POST">
      <button type="submit" class="delete-btn">Delete Question</button>
    </form>

    <a href="/categories" class="back">‚Üê Back to Categories</a>
  </div>
</body>
</html>
